@model SelectSchoolViewModel
@{
    ViewData["Title"] = "اختر المدرسة";
}

<h2>@ViewData["Title"].</h2>

<form asp-action="SelectSchool" method="post" class="form">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <span>اختر المدرسة التي ترغب بعرضها حالياً على النظام:</span>
            </div>
            <div class="form-group">
                <select asp-for="SelectedSchool" asp-items="Model.Schools" class="selectpicker"></select>
            </div>
            <button type="submit" class="btn btn-default">اختيار</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
