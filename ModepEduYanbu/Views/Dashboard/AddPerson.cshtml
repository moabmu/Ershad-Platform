@model AddPersonViewModel
@inject ISchoolRepo SchoolRepo;
@{
    ViewData["Title"] = "إضافة شخص للنظام";
}

<h2>@ViewData["Title"]</h2>
@if (ViewBag.UserMessage != null)
{
    <div>@ViewBag.UserMessage</div>
    <br />
    <a asp-action="AddPerson">انقر هنا لإضافة شخص جديد للنظام</a>
}
else
{
<form asp-controller="Dashboard" asp-action="AddPerson"
      method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="IdNo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IdNo" class="form-control" />
                <span asp-validation-for="IdNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FullName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        @if(String.IsNullOrEmpty(Model.SchoolMinistryNo))
        {
            @*<div class="form-group">
                <label asp-for="SchoolMinistryNo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SchoolMinistryNo" class="form-control" />
                    <span asp-validation-for="SchoolMinistryNo" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group">
                <label class="col-md-2 control-label">المدرسة: </label>
                <div class="col-md-10">
                    <select class="selectpicker" 
                            asp-for="SchoolMinistryNo" 
                            asp-items="@ViewBag.SchoolsList"
                            data-live-search="true"
                            title="اختر المدرسة..."></select>
                </div>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="SchoolMinistryNo" />
        }

        <div class="form-group">
            <label class="col-md-2 control-label">اختر الصلاحية: </label>
            <div class="col-md-10">
                <select class="selectpicker" asp-for="SelectedRole" asp-items="Model.Roles"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="إضافة" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
