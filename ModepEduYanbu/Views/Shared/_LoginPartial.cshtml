@using Microsoft.AspNetCore.Identity
@using ModepEduYanbu.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <li>
                @*<a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="إدارة الحساب" class="small">
                <span>المستخدم: @((await UserManager.GetUserAsync(User)).FullName)</span>
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">تسجيل الخروج</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li><a asp-area="" asp-controller="Account" asp-action="NewUser">تسجيل جديد</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">تسجيل الدخول</a></li>
    </ul>
}
