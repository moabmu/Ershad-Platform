@model IEnumerable<VerifySchoolViewModel>
@{
    ViewData["Title"] = "التحقق من المدارس";
}

<h2>التحقق من المدارس</h2>

<form asp-controller="Account" asp-action="VerifySchools"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      asp-route-idno="@ViewData["IdNo"]" 
      method="post" class="form">
    <h4>الرجاء إدخال الأرقام الوزارية للمدارس التي تعمل بها.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    @for(int i=0; i < this.Model.Count(); i++)
    {
        @*@Html.HiddenFor(x => school.SchoolId)
        @Html.HiddenFor(x => school.SchoolName)*@
        <input asp-for="@Model.ToList()[i].SchoolId" type="hidden" />
        <input asp-for="@Model.ToList()[i].SchoolName" type="hidden" />
        <div class="form-group">
            @*@Html.DisplayNameFor(x => school.SchoolName)*@
            <label asp-for="@Model.ToList()[i].SchoolName"></label>
            <br />
            <span style="font-weight:bold">
                @*@Html.DisplayFor(x => school.SchoolName)*@
                @Model.ToList()[i].SchoolName
            </span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ToList()[i].SchoolMinistryNo" class="col-md-2 control-label"></label>
            @*@Html.DisplayNameFor(x => school.SchoolMinistryNo);*@
            <div class="col-md-10">
                <input asp-for="@Model.ToList()[i].SchoolMinistryNo" class="form-control" />
                @*@Html.TextBoxFor(x => school.SchoolMinistryNo)*@
                <span asp-validation-for="@Model.ToList()[i].SchoolMinistryNo" class="text-danger"></span>
                @*@Html.ValidationMessageFor(x => school.SchoolMinistryNo);*@
            </div>
        </div>

    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top: 3px;">
            <button type="submit" class="btn btn-default">متابعة</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}





